@model EmbeddedStockWebApp.Models.ComponentType

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>ComponentType</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AdminComment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdminComment" class="form-control" />
                <span asp-validation-for="AdminComment" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ComponentInfo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ComponentInfo" class="form-control" />
                <span asp-validation-for="ComponentInfo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ComponentName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ComponentName" class="form-control" />
                <span asp-validation-for="ComponentName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Datasheet" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Datasheet" class="form-control" />
                <span asp-validation-for="Datasheet" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Manufacturer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger" />
            </div>
        </div>



        <div class="form-group">
            <label asp-for="Status" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<ComponentTypeStatus>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="WikiLink" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WikiLink" class="form-control" />
                <span asp-validation-for="WikiLink" class="text-danger" />
            </div>
        </div>

        <label>Categories</label>
        <div id="selCategories">
            @Html.ListBox("CategoryID", (MultiSelectList)ViewBag.Categories, new { size = 8 })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
