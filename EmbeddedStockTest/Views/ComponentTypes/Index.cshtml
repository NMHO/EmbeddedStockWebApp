@model EmbeddedStockTest.ViewModels.ComponentTypeIndexData


@{
    ViewBag.Title = "Component Types";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ComponentName
        </th>
        <th>
            ComponentInfo
        </th>
        <th>
            Status
        </th>
        <th>
            Categories
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ComponentTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentInfo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @foreach (var category in item.Categories)
                {
                    @category.CategoryId @: @category.Name <br/>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ComponentTypeId }) |
                @Html.ActionLink("Details", "Details", new { id=item.ComponentTypeId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ComponentTypeId })
            </td>
        </tr>
    }

</table>



